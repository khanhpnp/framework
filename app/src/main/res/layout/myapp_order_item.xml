<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/while_conner_bg"
    android:orientation="horizontal">

    <myapp.com.commons.component.SquaredImageView
        android:id="@+id/itemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:src="@drawable/cheese_1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductCode"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="#PRODUCT00000001"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:contentDescription="Quantity:"
            android:text="Quantity: 10"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:gravity="center_vertical|left"
            android:layout_height="wrap_content"
            android:text="Prices: $140.00$"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tvÄescription"
            android:layout_width="match_parent"
            android:gravity="center_vertical|left"
            android:layout_height="wrap_content"
            android:text="ZTE SPRO MF97A Smart Android dsdfsfsfsf afsdsdfsdf sfsdfsdf"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>


</LinearLayout>